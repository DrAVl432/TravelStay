{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2021","dom", "esnext"],
      "jsx": "react",
      "declaration": false,
      "sourceMap": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }